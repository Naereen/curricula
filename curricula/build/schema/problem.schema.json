{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Problem",
  "description": "Schema for assignment metadata.",
  "properties": {
    "short": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "relative_path": {
      "type": "string"
    },
    "grading": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "weight": {
          "type": "string",
          "minLength": 1
        },
        "points": {
          "type": "string",
          "minLength": 1
        },
        "automated": {
          "$ref": "#category"
        },
        "review": {
          "type": "boolean"
        },
        "manual": {
          "type": "boolean"
        }
      },
      "required": [
        "enabled",
        "weight",
        "automated",
        "review",
        "manual"
      ]
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "pattern": ".+@.+\\..+"
          }
        },
        "required": [
          "name",
          "email"
        ]
      }
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "string",
        "minItems": 1
      }
    }
  },
  "required": [
    "title",
    "authors",
    "grading"
  ],
  "definitions": {
    "category": {
      "id": "category",
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "minutes": {
          "type": "number",
          "minimum": 0
        },
        "weight": {
          "type": "string",
          "minLength": 1,
          "pattern": "\\d+\\.\\d+|\\d+\\.|\\.\\d|\\d"
        },
        "points": {
          "type": "string",
          "minLength": 1,
          "pattern": "\\d+\\.\\d+|\\d+\\.|\\.\\d|\\d"
        }
      }
    }
  }
}
